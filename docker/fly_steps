RUN set -ex \
    # install fly \
    && apt-get update \
    && curl -L --fail -s https://github.com/concourse/concourse/releases/download/v${FLY_VERSION}/fly_linux_amd64 \
       --output /usr/local/bin/fly \
    && chmod 755 /usr/local/bin/fly \
    \
    # cleanup \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*
